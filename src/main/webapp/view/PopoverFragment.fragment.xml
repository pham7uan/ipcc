<core:FragmentDefinition
        xmlns="sap.m"
        xmlns:core="sap.ui.core">
    <ResponsivePopover
            title="{i18n>errorSelectTableComboboxTitle}"
            class="sapUiPopupWithPadding"
            placement="Bottom" >
        <beginButton>
            <Button text="Ok" press="handleCloseButton" />
        </beginButton>
        <content>
            <Text text="{i18n>errorSelectTableComboboxMessage}" width="15em" densityAware="false" />
        </content>
    </ResponsivePopover>
</core:FragmentDefinition>